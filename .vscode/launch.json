    "version": "0.2.0",
    "configurations": [
        {
            "name": "gdb",
            "program": "${workspaceFolder}/build/test/sample_flow_program",
            "request": "launch",
            "type": "cppdbg",
            "args": [
                "-a17:00.0,dv_flow_en=2",
                "-a17:00.1,dv_flow_en=2",
                "-c0xf",
                "--",
                "-l", "60"
            ],
            "cwd": "${workspaceFolder}",
            "environment": [
                { "name": "LD_PRELOAD", "value": "${workspaceFolder}/build/lib/libdoca-counter-spy.so"}
            ]
        }
    ]
}
